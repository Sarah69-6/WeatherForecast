@{
    ViewBag.Title = "LoginPage";
}

<h2>Login</h2>
@using (Html.BeginForm("Log", "Home"))
{
    <div class="form-group">
        @Html.Label("UserName:")
        @Html.TextBox("UserName")
    </div>
    <div class="form-group">
        @Html.Label("Password:")
        @Html.TextBox("Password")
    </div>
    <input type="submit" value="Login" />
}